<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/r_capture_rr1"
        tools:context=".RK_registered_user_daily_login">

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="360dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rkinputs"
        android:hint="Please Enter your Password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password_input"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_boxrk_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Remember My pwd "
            android:textColor="#FF03DAC5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Forget Password"
            android:textColor="#FF03DAC5"
            android:textSize="14sp"
            android:textStyle="bold"

            />

    </LinearLayout>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fund_border_red"
        android:onClick="sendToHome"
        android:padding="10dp"
        android:text="Log IN"
        android:textAllCaps="false"
        android:textColor="#E53535"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />


    <TextView
        android:id="@+id/admin_panal_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="33dp"
        android:text="I'm an admin"
        android:textColor="#FF03DAC5"
        android:onClick="clickadminbtn"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/not_panal_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="23dp"
        android:onClick="clickNotadminbtn"
        android:text="I'm not an admin"
        android:textColor="#FF03DAC5"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    </RelativeLayout>

